                        [downcloud]
                            {LINK}
                        [/downcloud]                        
                    {'[/days]' if DAY_REQUIREMENT != 0 else ''}
                {'[/hideposts]' if POST_REQUIREMENT != 0 else ''}
            {'[/hidereactscore]' if LIKE_REQUIREMENT != 0 else ''}
        {'[/hidereact]' if THANK_REQUIREMENT else ''}
